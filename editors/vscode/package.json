{
  "name": "tova-lang",
  "displayName": "Tova Language",
  "description": "Language support for the Tova programming language",
  "version": "0.1.0",
  "author": "Enoch Kujem Abassey",
  "publisher": "tova-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:tova"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tova",
        "aliases": [
          "Tova",
          "tova"
        ],
        "extensions": [
          ".tova"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tova",
        "scopeName": "source.tova",
        "path": "./syntaxes/tova.tmLanguage.json"
      }
    ]
  }
}
